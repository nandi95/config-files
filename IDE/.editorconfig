# http://editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf
indent_style = space
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[{*.yml, *.yaml}]
indent_size = 2

# Batch files use tabs for indentation
[*.bat]
indent_style = tab
